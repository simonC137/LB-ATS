{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["frontend/**/*", "backend/**/*"],
  "exclude": ["node_modules", "production"]
}
